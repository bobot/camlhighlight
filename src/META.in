name = "camlhighlight"
version = "2.0"
description = "Source-code highlighting library"
requires = "extlib, sexplib, tyxml"
archive(byte) = "camlhighlight.cma"
archive(native) = "camlhighlight.cmxa"
archive(plugin,byte) = "camlhighlight.cma"
archive(plugin,native) = "camlhighlight.cmxs"

package "core"
	(
	name = "core"
	version = "2.0"
	requires = "sexplib"
	archive(byte) = "camlhighlight_core.cmo"
	archive(native) = "camlhighlight_core.cmx"
	archive(plugin,byte) = "camlhighlight_core.cmo"
	archive(plugin,native) = "camlhighlight_core.cmxs"
	)

package "parser"
	(
	name = "parser"
	version = "2.0"
	requires = "extlib, sexplib, camlhighlight.core"
	archive(byte) = "camlhighlight_parser.cmo"
	archive(native) = "camlhighlight_parser.cmx"
	archive(plugin,byte) = "camlhighlight_parser.cmo"
	archive(plugin,native) = "camlhighlight_parser.cmxs"
	)

package "write_xhtml"
	(
	name = "write_xhtml"
	version = "2.0"
	requires = "extlib, tyxml, camlhighlight.core"
	archive(byte) = "camlhighlight_write_xhtml.cmo"
	archive(native) = "camlhighlight_write_xhtml.cmx"
	archive(plugin,byte) = "camlhighlight_write_xhtml.cmo"
	archive(plugin,native) = "camlhighlight_write_xhtml.cmxs"
	)

